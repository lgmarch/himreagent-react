{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"],
    },
    "moduleResolution": "node",
    // Для библиотек, которые не поддерживают дефолтеый экспорт (default export)
    "allowSyntheticDefaultImports": true,
    // esModuleInterop позволяет работать с пакетами commonJS, используя import, export
    "esModuleInterop": true,
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
    },
  },
}